@model PROG6212_POE_CMCS.Models.Document

@{
    ViewData["Title"] = "Upload Supporting Document";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-dark">Upload Supporting Document</h2>

<div class="container mt-4">
    <div class="card border-dark shadow-sm">
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="FileName" class="control-label font-weight-bold text-dark">Select Document</label>
                    <input asp-for="FileName" type="file" class="form-control-file border border-dark p-2" />
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Upload Document</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
</div>