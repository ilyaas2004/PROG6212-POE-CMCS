@model PROG6212_POE_CMCS.Models.Claim


@{
    ViewData["Title"] = "Submit Claim";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="LecturerID" class="control-label">Lecturer</label>
        <select asp-for="LecturerID" class="form-control">
            <option value="">-- Select Lecturer --</option>
            <!-- Add placeholder options for now; no database integration -->
            <option value="1">Lecturer 1</option>
            <option value="2">Lecturer 2</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="HoursWorked" class="control-label">Hours Worked</label>
        <input asp-for="HoursWorked" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SubmissionDate" class="control-label">Submission Date</label>
        <input asp-for="SubmissionDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Submit Claim" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>